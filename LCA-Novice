#include <bits/stdc++.h>
using namespace std;
int level[100001];
vector<int> rel[100001];
int vis[100001];
void dfs(int key, int lvl)
{
  level[key]=lvl;
  vis[key]=1;
  for(int i=0;i<rel[key].size();i++)
  {
    if(vis[rel[key][i]]==0) dfs(rel[key][i],lvl+1);
  }
  
}
int lca(int a,int b)
{
  int d=level[b]-level[a];
  while(d--)
  {
    b=par[b];
  }
  if(a==b) return a;
  while(a!=b) //novice//        OR   while(par[a]!=par[b])
  {a=par[a];
    b=par[b];
  }
}
int main()
{   int n;cin>>n; //no. of nodes

   for(int i=1;i<n;i++)
   {
     int a; cin>>a;
     int b;cin>>b;
     rel[a].push_back(b);
     rel[b].push_back(a);
   }
   dfs(1,0);
   
   
   
   
   lca(a,b);
}
